{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "afplay /System/Library/Sounds/Glass.aiff",
        "timeoutSec": 10
      }
    ],
    "agentStop": [
      {
        "type": "command",
        "bash": "afplay /System/Library/Sounds/Glass.aiff",
        "timeoutSec": 10
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/notify-on-ask.sh",
        "timeoutSec": 10
      }
    ]
  }
}
