{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "dev:remote": "vite build && wrangler dev --remote",
    "preview": "wrangler dev",
    "deploy": "pnpm run build && wrangler deploy",
    "test": "vitest",
    "lint": "biome check --write",
    "format": "biome format --write .",
    "typecheck": "pnpm exec tsc --noEmit",
    "seed:r2": "pnpm run seed:r2:local",
    "sync:r2": "rclone sync r2:portfolio-bucket/ ./seeds/r2/ --progress --transfers=20 --exclude '.DS_Store'",
    "seed:r2:local": "pnpm run sync:r2 && node seeds/r2.mjs --local",
    "seed:r2:prod": "pnpm run sync:r2 && node seeds/r2.mjs --prod",
    "seed:reset": "rm -rf .wrangler/state && pnpm run seed:r2:local"
  },
  "private": true,
  "dependencies": {
    "extend": "^3.0.2",
    "gray-matter-es": "^0.2.1",
    "hono": "^4.11.7",
    "honox": "0.1.52",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.0.9",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.64.0"
  }
}
